{
  "name": "releases",
  "version": "1.0.0",
  "author": "kirillgroshkov <1@inventix.ru>",
  "private": true,
  "scripts": {
    "precommit": "lint-staged",
    "serve": "vue-cli-service serve",
    "lint": "vue-cli-service lint",
    "build": "vue-cli-service build",
    "tslint-all": "tslint 'src/**/*.{ts,tsx}' -t stylish --fix",
    "prettier-do": "prettier --write 'src/**/*.{js,jsx,ts,tsx,css,scss,graphql,json}'",
    "prettier-all": "yarn prettier-do && yarn tslint-all"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "prettier --write",
      "tslint -t stylish --fix",
      "git add"
    ],
    "src/**/*.{css,scss,graphql,json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "firebase": "^5.0.4",
    "lru-cache": "^4.1.3",
    "luxon": "^1.3.3",
    "marked": "^0.5.0",
    "raven-js": "^3.26.1",
    "vue": "^2.5.16",
    "vue-class-component": "^6.0.0",
    "vue-material": "^1.0.0-beta-10.2",
    "vue-progressbar": "^0.7.5",
    "vue-router": "^3.0.1",
    "vuex": "^3.0.1"
  },
  "devDependencies": {
    "@naturalcycles/shared-dev": "^1.0.11",
    "@types/lru-cache": "^4.1.1",
    "@types/luxon": "^1.2.2",
    "@types/marked": "^0.4.0",
    "@types/node": "^10.3.2",
    "@vue/cli-plugin-typescript": "^3.0.1",
    "@vue/cli-service": "^3.0.1",
    "husky": "^0.14.3",
    "lint-staged": "^7.2.0",
    "node-sass": "^4.9.0",
    "prettier": "^1.13.7",
    "sass-loader": "^7.0.1",
    "tslint": "^5.10.0",
    "typescript": "^3.0.3",
    "vue-template-compiler": "^2.5.16"
  }
}
